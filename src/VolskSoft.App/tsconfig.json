{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "atom": { "rewriteTsconfig": false },
      buildOnSave: false,
      "compileOnSave": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
            "dom",
            "es6",
            "es2015",
            "es2016"
            "es2017"
      ],
      "module": "commonjs",
      "moduleResolution": "node"
      "target": "es5"        
    },
    "exclude": [
      "e2e/**/*.ts"
      "node_modules",
      "**/*webpack.config.ts"
    ]
}
